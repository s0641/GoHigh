<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">


    <Button
        android:id="@+id/create_a_new_ticket"
        android:layout_width="229dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/et_style"
        android:text="@string/book_a_new_ticket"
        android:textColor="#673AB7" />

    <Button
        android:id="@+id/delete_an_existing_ticket"
        android:layout_width="225dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="355dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/et_style"
        android:text="@string/delete_an_existing_ticket"
        android:textColor="#03A9F4" />

    <Button
        android:id="@+id/get_an_existing_ticket"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="478dp"
        android:background="@drawable/et_style"
        android:text="@string/get_an_existing_ticket"
        android:textColor="#F44336"
        />

</RelativeLayout>